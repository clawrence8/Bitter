<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="10dp" >

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/user_text"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/post_text"
                android:textColor="@android:color/holo_orange_dark"
                android:text="notGBurdell"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/time_posted"
                android:layout_below="@id/post_text"
                android:text="4hrs"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/post_replies"
                android:text="8 replies"
                android:layout_below="@id/post_text"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/post_text"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:padding="7dp"
                android:text="Once, just once, I&apos;d like the community to give back to me."
                android:textStyle="italic"
                android:layout_toLeftOf="@+id/downvote_button"
                android:layout_toStartOf="@+id/downvote_button"/>


            <!-- This text view will become the downvote button-->
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:padding="20dp"
                android:scaleType="fitXY"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/downvote_button"
                android:src="@drawable/downvote"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/post_text"
                android:layout_alignTop="@+id/post_text"
                android:layout_alignLeft="@+id/user_text"
                android:layout_alignStart="@+id/user_text" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>